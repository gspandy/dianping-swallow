<?xml version="1.0" encoding="UTF-8"?>

        <!-- Don't forget to set system property
        -DLog4jContextSelector=org.apache.logging.log4j.core.async.AsyncLoggerContextSelector
             to make all loggers asynchronous. -->

<Configuration status="WARN">
<Appenders>

    <!--<CatAppender name="catAppender"/>-->
    <!-- Async Loggers will auto-flush in batches, so switch off immediateFlush. -->
    <!--<RandomAccessFile name="RandomAccessFile" fileName="/data/applogs/swallow/async.log" immediateFlush="false" append="true">-->
        <!--<PatternLayout>-->
            <!--<Pattern>%d %p %c{1.} [%t] %m %ex%n</Pattern>-->
        <!--</PatternLayout>-->
    <!--</RandomAccessFile>-->

    <RollingRandomAccessFile name="RandomAccessFile"
                 fileName="/data/applogs/swallow/async.log"
                 filePattern="/data/applogs/swallow/async.log.%d{yyyy-MM-dd}.gz">
        <PatternLayout pattern="%d[%-5p][%t][%c]%m%n"/>
        <TimeBasedTriggeringPolicy interval="1"
                                   modulate="true"/>
    </RollingRandomAccessFile>
</Appenders>
<Loggers>
    <Root level="info" includeLocation="false">
        <AppenderRef ref="RandomAccessFile"/>
        <!--<AppenderRef ref="catAppender"/>-->
    </Root>
</Loggers>
</Configuration>