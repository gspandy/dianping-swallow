<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    	xmlns:context="http://www.springframework.org/schema/context"
    	xmlns:task="http://www.springframework.org/schema/task"
		xmlns:mvc="http://www.springframework.org/schema/mvc"
    		
		xsi:schemaLocation="
			http://www.springframework.org/schema/task  
    		http://www.springframework.org/schema/task/spring-task-3.2.xsd 
            http://www.springframework.org/schema/beans 
            http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
            http://www.springframework.org/schema/context
            http://www.springframework.org/schema/context/spring-context-3.2.xsd
            http://www.springframework.org/schema/mvc
            http://www.springframework.org/schema/mvc/spring-mvc-3.2.xsd">
	
	<bean name="placeholder" lazy-init="false" class="com.dianping.lion.client.InitializeConfig">
        <property name="propertiesPath" value="config/applicationContext.properties" />
    </bean>
	
	<bean
        class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="locations">
            <list>
                <value>classpath:swallow-web.properties</value>
            </list>
        </property>
    </bean>
    
    
    
    <bean id="messageDAO"
        class="com.dianping.swallow.common.internal.dao.impl.mongodb.MessageDAOImpl">
        <property name="mongoManager" >
			<ref local="mongoManager"/>
		</property>
    </bean>

    <bean id="mongoManager"
        class="com.dianping.swallow.common.internal.dao.impl.mongodb.DefaultMongoManager">
        <constructor-arg>
            <value>swallow.mongo.producerServerURI</value>
        </constructor-arg>
    </bean>
	
            
            
	<import resource="applicationContext-utils.xml"/>
	<import resource="applicationContext-mongo.xml"/>

</beans>