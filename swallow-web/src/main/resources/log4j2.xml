<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="info" monitorInterval="30">

    <Appenders>
        <CatAppender name="catAppender"/>

        <Console name="console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d[%-5p][%t][%c]%m%n"/>
        </Console>
        <RollingFile name="fileAppender"
                     fileName="/data/applogs/swallow-web/logs/swallow-web.log"
                     filePattern="/data/applogs/swallow-web/logs/swallow-web.log.%d{yyyy-MM-dd}.gz">
            <PatternLayout pattern="%d[%-5p][%t][%c]%m%n"/>
            <TimeBasedTriggeringPolicy interval="1"
                                       modulate="true"/>
        </RollingFile>

        <RollingFile name="logFilterFileAppender"
                     fileName="/data/applogs/swallow-web/logs/logfilter/swallow-web.log"
                     filePattern="/data/applogs/swallow-web/logs/logfilter/swallow-web.log.%d{yyyy-MM-dd}.gz">
            <PatternLayout pattern="%d[%-5p][%t][%c]%m%n"/>
            <TimeBasedTriggeringPolicy interval="1"
                                       modulate="true"/>
        </RollingFile>
    </Appenders>

    <Loggers>
        <Logger name="org.jasig.cas" level="ERROR"
                additivity="true">
            <AppenderRef ref="console" level="ERROR"/>
        </Logger>
        <Logger name="org.springframework" level="WARN"
                additivity="true">
            <AppenderRef ref="console" level="ERROR"/>
        </Logger>
        <Logger name="com.dianping.swallow.web.filter" level="INFO"
                additivity="true">
            <AppenderRef ref="logFilterFileAppender" level="INFO"/>
        </Logger>
        <root level="INFO">
            <AppenderRef ref="console"/>
            <AppenderRef ref="fileAppender"/>
            <AppenderRef ref="catAppender"/>
        </root>
    </Loggers>
</Configuration>
