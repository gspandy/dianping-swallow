<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="http://www.springframework.org/schema/beans 
           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-3.0.xsd"
    default-autowire="byName">
    
    <bean id="mongoManager"
        class="com.dianping.swallow.common.internal.dao.impl.mongodb.DefaultMongoManager">
        <property name="swallowConfig" ref="swallowConfig"/>
        <property name="clusterManager" ref="clusterManager"/>
    </bean>
    
    
    <bean id="mongoClusterFactory" class="com.dianping.swallow.common.internal.dao.impl.mongodb.MongoClusterFactory">
    </bean>
    

    <bean id="ackDAO"
        class="com.dianping.swallow.common.internal.dao.impl.mongodb.MongoAckDAO">
        <property name="mongoManager" ref="mongoManager"/>
    </bean>

    <bean id="messageDAO"
        class="com.dianping.swallow.common.internal.dao.impl.mongodb.MongoMessageDAO">
        <property name="mongoManager" ref="mongoManager"/>
    </bean>

    <bean id="heartbeatDAO"
        class="com.dianping.swallow.common.internal.dao.impl.mongodb.MongoHeartbeatDAO">
        <property name="mongoManager" ref="mongoManager"/>
    </bean>

</beans>
