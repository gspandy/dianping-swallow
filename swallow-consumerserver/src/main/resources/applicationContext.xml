<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="http://www.springframework.org/schema/beans 
           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-3.0.xsd"
    default-autowire="byName">

    <bean
        class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="locations">
            <list>
                <value>classpath:swallow-consumerserver.properties</value>
            </list>
        </property>
    </bean>
    
	<bean id="lifecycleComponentManager" class="com.dianping.swallow.common.internal.lifecycle.LifecycleComponentManager"/>

	<import resource="applicationContext-monitor.xml"/>
	<import resource="applicationContext-consumerserver.xml"/>
	
</beans>
